{% extends 'base.html.twig' %}

{% block title %}Measurement{% endblock %}

{% block body %}
    <h1>Measurement</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ measurement.id }}</td>
            </tr>
            <tr>
                <th>Datetime</th>
                <td>{{ measurement.datetime ? measurement.datetime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Temperature</th>
                <td>{{ measurement.temperature }}</td>
            </tr>
            <tr>
                <th>MaxTemperature</th>
                <td>{{ measurement.maxTemperature }}</td>
            </tr>
            <tr>
                <th>MinTemperature</th>
                <td>{{ measurement.minTemperature }}</td>
            </tr>
            <tr>
                <th>FeelsLike</th>
                <td>{{ measurement.feelsLike }}</td>
            </tr>
            <tr>
                <th>WindSpeed</th>
                <td>{{ measurement.windSpeed }}</td>
            </tr>
            <tr>
                <th>Pressure</th>
                <td>{{ measurement.pressure }}</td>
            </tr>
            <tr>
                <th>Humidity</th>
                <td>{{ measurement.humidity }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_measurement_index') }}">back to list</a>

    <a href="{{ path('app_measurement_edit', {'id': measurement.id}) }}">edit</a>

    {{ include('measurement/_delete_form.html.twig') }}
{% endblock %}
